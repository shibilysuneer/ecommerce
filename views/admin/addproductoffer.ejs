<%- include('../layouts/admin/header.ejs') %>

<!-- main-content -->
<div class="main-content">
    <!-- main-content-wrap -->
    <div class="main-content-inner">
        <!-- main-content-wrap -->
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Add Product Offer</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a href="index.html"><div class="text-tiny">Dashboard</div></a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <a href="#"><div class="text-tiny">Offers</div></a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">Add Product Offer</div>
                    </li>
                </ul>
            </div>
            <!-- new-product-offer -->
            <div class="wg-box">
                <form action="/admin/addproductoffer" method="post" class="form-new-offer form-style-1">
                    <fieldset class="name">
                        <div class="body-title">Offer Name <span class="tf-color-1">*</span></div>
                        <input class="flex-grow" type="text" placeholder="Enter offer name" name="offerName" tabindex="0" value="" >
                    </fieldset>
                    <fieldset>
                        <div class="body-title">Product <span class="tf-color-1">*</span></div>
                        <select class="flex-grow" name="productId" tabindex="0" required="">
                            <% products.forEach(function(product) { %>
                                <option value="<%= product._id %>"><%= product.productName %></option>
                            <% }); %>
                        </select>
                    </fieldset>
                    <fieldset>
                        <div class="body-title">Offer Percentage (%) <span class="tf-color-1">*</span></div>
                        <input class="flex-grow" type="number" placeholder="Enter discount percentage" name="offerPercentage" min="0" max="100" tabindex="0" value="">
                    </fieldset>
                   
                    <div class="bot">
                        <div></div>
                        <button class="tf-button w208" type="submit">Save</button>
                    </div>
                </form>
            </div>
            <!-- /new-product-offer -->
        </div>
        <!-- /main-content-wrap -->
    </div>
    <!-- /main-content-wrap -->

    <%- include('../layouts/admin/footer.ejs') %>
</div>
<!-- /main-content -->
