<%- include('../layouts/admin/header.ejs') %>

<!-- main-content -->
<div class="main-content">
    <!-- main-content-wrap -->
    <div class="main-content-inner">
        <!-- main-content-wrap -->
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Sales Report</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a href="/admin/dashboard"><div class="text-tiny">Dashboard</div></a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <a href="#"><div class="text-tiny">Reports</div></a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">Sales Report</div>
                    </li>
                </ul>
            </div>

            <!-- Sales report filter options -->
            <div class="wg-box">
                <div class="flex items-center justify-between gap10 flex-wrap">
                    <div class="wg-filter flex-grow">
                        <form class="form-search" method="GET" action="/admin/sales-report">
                            <fieldset class="name">
                                <label for="dateRange">Custtttom Date Range</label>
                                <input type="date" name="startDate" required>
                                <input type="date" name="endDate" required>
                            </fieldset>
                            <div class="select">
                                <select name="reportType">
                                    <option value="daily">1 Day</option>
                                    <option value="weekly">1 Week</option>
                                    <option value="monthly">1 Month</option>
                                    <option value="yearly">1 Year</option>
                                </select>
                            </div>
                            <div class="button-submit">
                                <button class="" type="submit">Filter</button>
                            </div>
                        </form>
                    </div>
                    <div class="flex items-center gap10">
                        <a class="tf-button style-1" href="/admin/sales-report/download/pdf">Download PDF</a>
                        <a class="tf-button style-1" href="/admin/sales-report/download/excel">Download Excel</a>
                    </div>
                </div>
            </div>

            <!-- Sales report table -->
            <div class="wg-table table-sales-report">
                <ul class="table-title flex gap20 mb-14">
                    <li>
                        <div class="body-title">Date</div>
                    </li>    
                    <li>
                        <div class="body-title">Total Sales Count</div>
                    </li>
                    <li>
                        <div class="body-title">Total Sales Amount</div>
                    </li> 
                    <li>
                        <div class="body-title">Total Discount</div>
                    </li>
                    <li>
                        <div class="body-title">Coupon Deduction</div>
                    </li>
                    <li>
                        <div class="body-title">Final Sales Amount</div>
                    </li>
                </ul>

                <ul class="flex flex-column">
                    <% orders.forEach(order => { %>

                    <li class="report-item gap14">
                        <div class="flex items-center justify-between gap20 flex-grow">
                            <div class="body-text"><%= report.date %></div>
                            <div class="body-text"><%= report.totalSalesCount %></div>
                            <div class="body-text">$<%= report.totalSalesAmount.toFixed(2) %></div>
                            <div class="body-text">$<%= report.totalDiscount.toFixed(2) %></div>
                            <div class="body-text">$<%= report.couponDeduction.toFixed(2) %></div>
                            <div class="body-text">$<%= report.finalSalesAmount.toFixed(2) %></div>
                        </div>
                    </li>
                    <% }) %>
                    <!-- <% } else { %>
                    <li class="no-data">
                        <div class="body-text">No sales data available for the selected range.</div>
                    </li>
                    <% } %> -->
                </ul>
            </div>

            <!-- Pagination (if needed) -->
            <div class="divider"></div>
            <!-- <div class="flex items-center justify-between flex-wrap gap10">
                <ul class="wg-pagination">
                    <% if (currentPage > 1) { %>
                    <li>
                        <a href="?page=<%= currentPage - 1 %>&limit=10"><i class="icon-chevron-left"></i></a>
                    </li>
                    <% } %>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="<%= currentPage === i ? 'active' : '' %>">
                        <a href="?page=<%= i %>&limit=10"><%= i %></a>
                    </li>
                    <% } %>
                    <% if (currentPage < totalPages) { %>
                    <li>
                        <a href="?page=<%= currentPage + 1 %>&limit=10"><i class="icon-chevron-right"></i></a>
                    </li>
                    <% } %>
                </ul>
            </div> -->

        </div>
        <!-- /main-content-wrap -->
    </div>
    <!-- /main-content-inner -->
</div>
<!-- /main-content -->

<%- include('../layouts/admin/footer.ejs') %>
