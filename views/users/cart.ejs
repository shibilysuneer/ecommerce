<%- include('../layouts/user/footer.ejs') %>
 

<script>
    function updateQuantity(productId, quantityChange) {
    const qtyInput = document.getElementById(`sst-${productId}`);
    let newQty = parseInt(qtyInput.value) + quantityChange;

    if (newQty < 1) {
        newQty = 1;
        Swal.fire({
            icon: 'warning',
            title: 'Minimum Quantity Reached',
            text: 'You must purchase at least 1 product.',
            showConfirmButton: true,
        }).then(() => {
            qtyInput.value = newQty;
            qtyInput.disabled = false; // Re-enable the input after the alert
        });
        return;
    } else if (newQty > 10) {
        newQty = 10;
        // alert("Maximum 10 products can be purchased.");
        Swal.fire({
            icon: 'warning',
            title: 'Limit Reached',
            text: 'Maximum 10 products can be purchased.',
            showConfirmButton: true,
        }).then(() => {
            qtyInput.value = newQty;
            qtyInput.disabled = false; // Re-enable the input after the alert
        });
        return;
    }

    qtyInput.value = newQty;

    qtyInput.disabled = true;

    
    fetch('/update-cart', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            productId: productId,
            quantity: newQty
        }),
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Swal.fire({
            //     icon: 'success',
            //     title: 'Cart Updated',
            //     text: 'Your cart has been updated successfully.',
            //     showConfirmButton: false,
            //     timer: 1500
            // }).then(() => {
            //     location.reload();
            // });
            // Reload the checkout page to reflect updated quantities and subtotal
             location.reload();
        }else if (data.availableStock !== undefined){
            // alert(`Only ${data.availableStock} items left in stock.`);
            Swal.fire({
                icon: 'warning',
                title: 'Stock Limit',
                text: `Only ${data.availableStock} items left in stock.`,
            });
            qtyInput.value = data.availableStock;
        }else {
            Swal.fire({
                icon: 'error',
                title: 'Update Failed',
                text: 'Failed to update cart: ' + data.message,
            });
                // alert('Failed to update cart: ' + data.message);
            }
    })
    .catch(error => {
        console.error('Error updating quantity:', error);
        // alert('An error occurred while updating the cart. Please try again.');
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'An error occurred while updating the cart. Please try again.',
        });
    })
    .finally(() => {
        // Re-enable the input field after the request completes
        qtyInput.disabled = false;
    });
}

</script>




